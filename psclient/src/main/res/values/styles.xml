<resources>

    <style name="Theme.PSClient.AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <item name="colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/onBackground</item>
        <item name="colorSurface">@color/surfaceBackground</item>
        <item name="colorOnSurface">@color/onSurfaceBackground</item>
        <item name="errorTextColor">@color/error</item>
        <item name="android:statusBarColor">@color/primaryVariant</item>
    </style>

    <style name="Theme.PSClient.TeamBuilderActivityTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <item name="colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/onBackground</item>
        <item name="colorSurface">@color/surfaceBackground</item>
        <item name="colorOnSurface">@color/onSurfaceBackground</item>
        <item name="errorTextColor">@color/error</item>
        <item name="android:statusBarColor">@color/primaryVariant</item>
    </style>


    <style name="Animation.PSClient.TipPopup" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/battle_popup_in</item>
        <item name="android:windowExitAnimation">@anim/battle_popup_out</item>
    </style>

    <style name="TextAppearance.PSClient.Move" parent="TextAppearance.MaterialComponents.Button" >
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Widget.PSClient.ExtraActionButton" parent="Widget.AppCompat.TextView" >
        <item name="android:background">@drawable/bg_battle_extra_actions</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="drawableTint">?attr/colorOnSurface</item>
    </style>

</resources>
